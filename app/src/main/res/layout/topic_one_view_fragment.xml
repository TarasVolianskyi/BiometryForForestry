                android:layout_weight="1"
                android:padding="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/et_row_5_colomn_1"
                android:layout_weight="1"
                android:padding="5dp" />

            <TextView
                android:id="@+id/tv_row_5_colomn_2"
