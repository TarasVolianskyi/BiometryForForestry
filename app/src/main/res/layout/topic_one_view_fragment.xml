            <TextView
                android:id="@+id/tv_row_6_colomn_4"
                android:layout_weight="1"
                android:padding="5dp" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btn_count1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
